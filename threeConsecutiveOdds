class Solution {
    public boolean threeConsecutiveOdds(int[] arr) {
        int n = arr.length;
        int len =0;
        for(int i =0;i<n;i++)
        {
            if(arr[i]%2!=0)
            {
                len++;
                 if(len>=3)
        {
            return true;
        }
            }
            else{
                len =0;
            }
        }
       
        return false;
        
    }
}
