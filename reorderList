class Solution {
    public void reorderList(ListNode head) {
        if (head == null || head.next == null) return;

        // find middle
        ListNode slow = head;
        ListNode fast = head;

        while (fast.next != null && fast.next.next != null) {
            fast = fast.next.next;
            slow = slow.next;
        }

        // split list
        ListNode cur = slow.next;
        slow.next = null;

        // reverse second half
        ListNode prev = null;
        while (cur != null) {
            ListNode next = cur.next;
            cur.next = prev;
            prev = cur;
            cur = next;
        }

        // merge
        ListNode f = head;
        ListNode s = prev;

        while (s != null) {
            ListNode tf = f.next;
            ListNode ts = s.next;

            f.next = s;
            s.next = tf;

            f = tf;
            s = ts;
        }
    }
}
